<html>
<body>
    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <div class="col-md-3">
                <p class="lead">Search Stores</p>
                <div class="list-group">
                    <%= form_for @search, html: {class: "pure-form"} do |s| %>
    
    <div class="field">
         <%= s.label :keywords %></>
            <%= s.text_field :keywords %>
    </div>
    
    <div class="field">
        <%= s.label :category %></>
        <%= s.select :category, options_for_select(@categories), :include_blank => true %>
    </div>
    
    <div class="field">
        <%= s.label :min_price, "Min Price" %>  <%= s.text_field :min_price, size: 10 %>
        <%= s.label :min_price, "Max Price" %>  <%= s.text_field :max_price, size: 10 %>
    </div>
    
    <div class="actions"><%= s.submit "Search", class: "pure-button pure-button-primary" %></div>
    
<% end %>
                  
                </div>
            </div>


<% if @search.search_stores.empty? %>

    <p>No Records Found</p>
    
<% else %>

    <% @search.search_stores.each do |c| %>
        <br>

                <div class="row">

                    <div class="col-sm-4 col-lg-4 col-md-4">
                        <div class="thumbnail">
                            <%= image_tag c.image.url(:thumb) %>
                            <div class="caption">
                                <h4><%= link_to c.name, c.source %></h4>
                                <h5 class="pull-right">Average Price Â£<%= c.price_average %></h5>
                                <h6><%= c.category %></h6>
                                <div class="ratings">
                                <p><%= c.summary %></p>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                    <% end %>
                    <% end %>
                 </div>
                    
    <!-- /.container -->

    <div class="container">

        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Your Website 2014</p>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->

   

</body>

</html>






<p><%= link_to 'Back', stores_path %></p>
